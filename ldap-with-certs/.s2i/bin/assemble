#!/bin/sh

SRCCONF=/tmp/src/configuration
SRCBIN=/tmp/src/bin
BYTEMAN_VERSION=3.0.8

if [ -d ${SRCCONF} ]; then
  echo "Copying config files from project..."
  cp -v ${SRCCONF}/* $AMQ_HOME/conf/
fi

if [ -d ${SRCBIN} ]; then
  echo "Copying shells from project..."
  chmod +x ${SRCBIN}/*.sh
  cp -v ${SRCBIN}/*.sh $AMQ_HOME/bin/
fi

echo "Downloading byteman jar..."
curl -L -o $AMQ_HOME/lib/byteman.jar http://repo1.maven.org/maven2/org/jboss/byteman/byteman/$BYTEMAN_VERSION/byteman-$BYTEMAN_VERSION.jar

exit 0
